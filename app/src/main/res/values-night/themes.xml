<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Portray" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainDarkBlueWithoutOpacity</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#121212</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainDarkBlueWithoutOpacity</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="materialButtonStyle">@style/MyButtonTheme</item>
        <item name="colorButtonNormal">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#121212</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Portray.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

    <style name="Theme.Portray.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Portray.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyleTextColor">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component, and -->
        <!--the text color is colorOnPrimary -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="nextButtonOnboardingWithText">
        <item name="android:textColor">@color/mainDarkBlue</item>
        <item name="strokeColor">@color/mainDarkBlue</item>
        <item name="rippleColor">@color/mainDarkBlue</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="getStartedButtonOnboardingWithText">
        <item name="android:textColor">#e8e8e8</item>
        <item name="strokeColor">@color/mainDarkBlue</item>
        <item name="rippleColor">@color/mainDarkBlue</item>
        <item name="backgroundTint">@color/mainDarkBlue</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Widget.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>
</resources>